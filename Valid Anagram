class Solution {
public:
    bool isAnagram(string s, string t) {
        if(s.length() == t.length()){      // checking both strings length 
        
        // sorting the list in asending order
        sort(s.begin(), s.end());    
        sort(t.begin(), t.end());

       // after sorting checking both strings are same or not
        return s==t;
        }

        return false;
    }
};
